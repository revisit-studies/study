{
  "$schema": "https://raw.githubusercontent.com/revisit-studies/study/v2.0.2/src/parser/LibraryConfigSchema.json",
  "description": "This is a library for testing the microphone. It provides a component that listens to the microphone and only enables the next button when audio is detected.",
  "components": {
    "audioTest": {
      "description": "Audio test",
      "type": "react-component",
      "path": "libraries/mic-check/assets/AudioTest.tsx",
      "nextButtonLocation": "belowStimulus",
      "nextButtonText": "Continue",
      "response": [
        {
          "id": "audioResponse",
          "type": "radio",
          "required": true,
          "hidden": true,
          "location": "sidebar",
          "prompt": "Found Audio",
          "options": [
            {
              "label": "Yes",
              "value": "Yes"
            }
          ]
        }
      ]
    }
  },
  "sequences": {}
}