{
  "$schema": "https://raw.githubusercontent.com/revisit-studies/study/dev/src/parser/LibraryConfigSchema.json",
  "description": "The System Usability Scale (SUS) is a 10-item questionnaire that measures perceived ease of use, perceived usefulness, and overall satisfaction with a system. The SUS has been widely used in usability studies and is considered a standard measure of usability. This library contains one component with 10 questions. The component is the full SUS questionnaire with 10 questions.",
  "reference": "J. Brooke, “SUS: A ‘Quick and Dirty’ Usability Scale,” Usability Evaluation In Industry, pp. 207–212, Jun. 1996",
  "doi":"10.1201/9781498710411-35",
  "components": {
    "sus": {
      "type": "questionnaire",
      "response": [
        {
          "id": "use-frequently",
          "prompt": "I think that I would like to use this system **frequently**",
          "required": true,
          "location": "aboveStimulus",
          "type": "likert",
          "numItems": 5,
          "rightLabel": "Strongly Agree",
          "leftLabel": "Strongly Disagree"
        },
        {
          "id": "unnecessarily-complex",
          "prompt": "I found the system **unnecessarily complex**",
          "required": true,
          "location": "aboveStimulus",
          "type": "likert",
          "numItems": 5,
          "rightLabel": "Strongly Agree",
          "leftLabel": "Strongly Disagree"
        },
        {
          "id": "easy-to-use",
          "prompt": "I thought the system was **easy to use**",
          "required": true,
          "location": "aboveStimulus",
          "type": "likert",
          "numItems": 5,
          "rightLabel": "Strongly Agree",
          "leftLabel": "Strongly Disagree"
        },
        {
          "id": "need-technical-support",
          "prompt": "I think that I would **need the support of a technical person** to be able to use this system",
          "required": true,
          "location": "aboveStimulus",
          "type": "likert",
          "numItems": 5,
          "rightLabel": "Strongly Agree",
          "leftLabel": "Strongly Disagree"
        },
        {
          "id": "well-integrated",
          "prompt": "I found the various functions in this system were **well integrated**",
          "required": true,
          "location": "aboveStimulus",
          "type": "likert",
          "numItems": 5,
          "rightLabel": "Strongly Agree",
          "leftLabel": "Strongly Disagree"
        },
        {
          "id": "too-inconsistent",
          "prompt": "I thought there was **too much inconsistency** in this system",
          "required": true,
          "location": "aboveStimulus",
          "type": "likert",
          "numItems": 5,
          "rightLabel": "Strongly Agree",
          "leftLabel": "Strongly Disagree"
        },
        {
          "id": "quick-to-learn",
          "prompt": "I would imagine that most people would **learn to use this system very quickly**",
          "required": true,
          "location": "aboveStimulus",
          "type": "likert",
          "numItems": 5,
          "rightLabel": "Strongly Agree",
          "leftLabel": "Strongly Disagree"
        },
        {
          "id": "cumbersome-to-use",
          "prompt": "I found the system **very cumbersome** to use",
          "required": true,
          "location": "aboveStimulus",
          "type": "likert",
          "numItems": 5,
          "rightLabel": "Strongly Agree",
          "leftLabel": "Strongly Disagree"
        },
        {
          "id": "confident-using",
          "prompt": "I felt **very confident** using the system",
          "required": true,
          "location": "aboveStimulus",
          "type": "likert",
          "numItems": 5,
          "rightLabel": "Strongly Agree",
          "leftLabel": "Strongly Disagree"
        },
        {
          "id": "needed-to-learn-lot",
          "prompt": "I needed to **learn a lot of things** before I could get going with this system",
          "required": true,
          "location": "aboveStimulus",
          "type": "likert",
          "numItems": 5,
          "rightLabel": "Strongly Agree",
          "leftLabel": "Strongly Disagree"
        }
      ]
    }
