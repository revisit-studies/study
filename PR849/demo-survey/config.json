{
  "$schema": "https://raw.githubusercontent.com/revisit-studies/study/v2.2.0/src/parser/StudyConfigSchema.json",
  "studyMetadata": {
    "title": "Question Types and Form Elements Demo",
    "version": "pilot",
    "authors": [
      "The reVISit Team"
    ],
    "date": "2023-04-30",
    "description": "A demo of supported survey question types and form elements.",
    "organizations": [
      "University of Utah",
      "WPI",
      "University of Toronto"
    ]
  },
  "uiConfig": {
    "contactEmail": "contact@revisit.dev",
    "helpTextPath": "demo-survey/assets/help.md",
    "logoPath": "revisitAssets/revisitLogoSquare.svg",
    "withProgressBar": true,
    "autoDownloadStudy": false,
    "withSidebar": false,
    "enumerateQuestions": true,
    "provideFeedback": true
  },
  "components": {
    "introduction": {
      "type": "markdown",
      "path": "demo-survey/assets/introduction.md",
      "response": []
    },
    "likert": {
      "type": "questionnaire",
      "provideFeedback": true,
      "response": [
        {
          "id": "q-likert",
          "prompt": "Likert scale example",
          "secondaryText": "A likert example with 9 items, also showing how to add a divider after the element.",
          "type": "likert",
          "numItems": 9,
          "rightLabel": "Like",
          "leftLabel": "Dislike",
          "withDivider": true
        }
      ],
      "correctAnswer": [
        {
          "id": "q-likert",
          "answer": 5
        }]
    },
    "matrix-radio-satisfaction": {
      "type": "questionnaire",
      "response": [
        {
          "id": "q-multi-satisfaction",
          "prompt": "Rate your satisfaction from 1 (Highly Unsatisfied) to 5 (Highly Satisfied) for the following items.",
          "secondaryText": "A simple matrix of Likert responses with predefined options for satisfaction.",
          "type": "matrix-radio",
          "answerOptions": "satisfaction5",
          "questionOptions": [
            "The tool we created",
            "The technique we developed",
            "The authors of the tools"
          ]
        }
      ],
      "correctAnswer": [
        {
          "id": "q-multi-satisfaction",
          "answer": ["Satisfied", "Satisfied", "Highly Unsatisfied"]
        }]
    },
    "matrix-radio": {
      "type": "questionnaire",
      "response": [
        {
          "id": "q-multi-satisfaction",
          "prompt": "Rate your satisfaction from 1 (Highly Unsatisfied) to 5 (Highly Satisfied) for the following items.",
          "secondaryText": "A simple matrix of Likert responses with predefined options for satisfaction.",
          "type": "matrix-radio",
          "answerOptions": ["1","2"],
          "questionOptions": [
            "The tool we created",
            "The technique we developed",
            "The authors of the tools"
          ]
        }
      ],
      "correctAnswer": [
        {
          "id": "q-multi-satisfaction",
          "answer": [
            "1",
            "2",
            "1"
          ]
        }]
    },
    "matrix-checkbox": {
      "type": "questionnaire",
      "response": [
        {
          "id": "multi-custom",
          "prompt": "Which categories do the following items belong to?",
          "secondaryText": "A matrix of checkboxes with custom options for categorization.",
          "type": "matrix-checkbox",
          "answerOptions": [
            "Has Legs",
            "Has Wings",
            "Can Swim"
          ],
          "questionOptions": [
            "Dog",
            "Snake",
            "Eagle",
            "Salmon",
            "Platypus"
          ]
        }
      ],
      "correctAnswer": [
        {
          "id": "multi-custom",
          "answer": [
            ["Has Legs"],
            ["Has Legs"],
            ["Has Wings"],
            ["Can Swim"],
            ["Has Legs", "Can Swim"]
          ]
        }]
    },
    "slider": {
      "type": "questionnaire",
      "response": [
        {
          "id": "q-slider",
          "prompt": "Slider example",
          "secondaryText": "A slider for 0-100 with 3 breakpoints for bad, mid, and good",
          "type": "slider",
          "startingValue": 50,
          "spacing": 50,
          "options": [
            {
              "label": "Bad",
              "value": 0
            },
            {
              "label": "Mid",
              "value": 50
            },
            {
              "label": "Good",
              "value": 100
            }
          ]
        }
      ],
      "correctAnswer": [
        {
          "id": "q-slider",
          "answer": 75
        }
      ]
    },
    "checkboxOrder": {
      "type": "questionnaire",
      "response": [
        {
          "id": "q-checkbox",
          "prompt": "Checkbox example, but this time with a long title that makes a ton of sense and is really cool",
          "secondaryText": "Checkboxes for multi-selection",
          "minSelections": 2,
          "maxSelections": 2,
          "type": "checkbox",
          "options": [
            "Option 1",
            "Option 2",
            "Option 3"
          ],
          "withOther": true
        }
      ],
      "correctAnswer": [
        {
          "id": "q-checkbox",
          "answer": [
            "Option 1",
            "Option 3"
          ]
        }
      ]
    },
    "aboveStimulus": {
      "type": "questionnaire",
      "response": [
        {
          "id": "q-checkbox",
          "prompt": "Checkbox example, but this time with a long title that makes a ton of sense and is really cool",
          "secondaryText": "Checkboxes for multi-selection",
          "minSelections": 2,
          "maxSelections": 2,
          "type": "checkbox",
          "options": [
            "Option 1",
            "Option 2",
            "Option 3"
          ],
          "withOther": true,
          "location": "aboveStimulus"
        }
      ],
      "correctAnswer": [
        {
          "id": "q-checkbox",
          "answer": [
            "Option 1",
            "Option 3"
          ]
        }
      ]
    }
  },
  "sequence": {
    "order": "fixed",
    "components": [
      "introduction",
      "likert",
      "matrix-radio-satisfaction",
      "matrix-radio",
      "matrix-checkbox",
      "slider",
      "checkboxOrder",
      "aboveStimulus"
    ]
  }
}