{
  "$schema": "https://raw.githubusercontent.com/revisit-studies/study/jk/stylesheet/src/parser/StudyConfigSchema.json",
  "studyMetadata": {
    "title": "Styling Demo Study",
    "version": "pilot",
    "authors": [
      "The reVISit Team"
    ],
    "date": "2025-07-09",
    "description": "A comprehensive demo of styled components and responses.",
    "organizations": [
      "University of Utah",
      "WPI",
      "University of Toronto"
    ]
  },
  "uiConfig": {
    "contactEmail": "contact@revisit.dev",
    "helpTextPath": "demo-style/assets/help.md",
    "logoPath": "revisitAssets/revisitLogoSquare.svg",
    "withProgressBar": true,
    "autoDownloadStudy": false,
    "sidebar": true,
    "windowEventDebounceTime": 200
  },
  "components": {
    "introduction": {
      "type": "markdown",
      "path": "demo-style/assets/introduction.md",
      "response": []
    },
    "markdown-component": {
      "type": "markdown",
      "path": "demo-style/assets/test.md",
      "response": [
        {
          "id": "markdown-feedback",
          "prompt": "How readable is this styled markdown content?",
          "type": "radio",
          "location": "belowStimulus",
          "options": ["Excellent", "Good", "Fair", "Poor"],
          "required": true
        }
      ]
    },
    "react-component": {
      "type": "react-component",
      "path": "demo-click-accuracy-test/assets/ClickAccuracyTest.tsx",
      "instruction": "This is a react component. The style of this component is width: 500px, backgroundColor:... ",
      "instructionLocation": "aboveStimulus",
      "parameters": {
        "speed": 100
      },
      "response": [
        {
          "id": "react-difficulty",
          "prompt": "Do you like the background color of this component?",
          "type": "buttons",
          "location": "belowStimulus",
          "options": ["Yes", "No"],
          "required": true
        }
      ]
    },
    "image-component": {
      "type": "image",
      "path": "demo-image/assets/uncertainty-1.png",
      "instruction": "This is an image component. The style of this component is `#stylesheet-demo {background: lightblue;}` ",
      "response": [
        {
          "id": "image-clarity",
          "prompt": "Rate the clarity of this image:",
          "type": "likert",
          "location": "belowStimulus",
          "numItems": 5,
          "leftLabel": "Very unclear",
          "rightLabel": "Very clear",
          "required": true
        }
      ]
    },
    "website-component": {
      "type": "website",
      "path": "https://revisit.dev/docs/introduction/",
      "response": [
        {
          "id": "website-interaction",
          "prompt": "How intuitive was the website interaction?",
          "type": "buttons",
          "location": "belowStimulus",
          "options": ["Not intuitive", "Somewhat intuitive", "Very intuitive"],
          "required": true
        }
      ]
    },
    "questionnaire-component": {
      "type": "questionnaire",
      "response": [
        {
          "id": "questionnaire-example",
          "prompt": "This is a styled questionnaire component. How does it look?",
          "type": "radio",
          "location": "belowStimulus",
          "options": ["Good styling", "Needs improvement", "Excellent"],
          "required": true
        }
      ]
    },
    "vega-path-component": {
      "type": "vega",
      "path": "demo-vega/specs/vegademo1.specs.json",
      "response": [
        {
          "id": "vega-path-feedback",
          "prompt": "Rate this Vega visualization loaded from a file:",
          "type": "dropdown",
          "location": "belowStimulus",
          "placeholder": "Select rating",
          "options": ["Poor", "Fair", "Good", "Excellent"],
          "required": true
        }
      ]
    },
    "vega-config-component": {
      "type": "vega",
      "config": {
        "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
        "description": "Simple bar chart with inline config",
        "data": {
          "values": [
            {"category": "A", "value": 28}, 
            {"category": "B", "value": 55},
            {"category": "C", "value": 43}, 
            {"category": "D", "value": 91}
          ]
        },
        "mark": "bar",
        "encoding": {
          "x": {"field": "category", "type": "nominal"},
          "y": {"field": "value", "type": "quantitative"}
        }
      },
      "response": [
        {
          "id": "vega-config-feedback",
          "prompt": "How effective is this inline Vega configuration?",
          "type": "checkbox",
          "location": "belowStimulus",
          "options": ["Clear", "Informative", "Well-designed", "Easy to read"],
          "required": true
        }
      ]
    },
    "video-component": {
      "type": "video",
      "path": "demo-video/assets/venice.mp4",
      "forceCompletion": false,
      "withTimeline": true,
      "response": [
        {
          "id": "video-quality",
          "prompt": "Rate the video quality and styling:",
          "type": "matrix-radio",
          "location": "belowStimulus",
          "answerOptions": ["Excellent", "Good", "Fair", "Poor"],
          "questionOptions": ["Video clarity", "Styling appearance"],
          "required": true
        }
      ]
    },
    "responses": {
      "type": "questionnaire",
      "response": [
        {
          "id": "numerical-response",
          "prompt": "Enter your age (Numerical Response):",
          "type": "numerical",
          "location": "belowStimulus",
          "min": 18,
          "max": 99,
          "placeholder": "Age",
          "required": true
        },
        {
          "id": "short-text-response",
          "prompt": "Your name (Short Text Response):",
          "type": "shortText",
          "location": "belowStimulus",
          "placeholder": "Enter name",
          "required": true
          
        },
        {
          "id": "long-text-response",
          "prompt": "Comments (Long Text Response):",
          "type": "longText",
          "location": "belowStimulus",
          "placeholder": "Enter detailed comments",
          "required": false
         
        },
        {
          "id": "likert-response",
          "prompt": "Rate satisfaction (Likert Response):",
          "type": "likert",
          "location": "belowStimulus",
          "numItems": 7,
          "leftLabel": "Very dissatisfied",
          "rightLabel": "Very satisfied",
          "required": true
        },
        {
          "id": "matrix-response",
          "prompt": "Rate these aspects (Matrix Response):",
          "type": "matrix-radio",
          "location": "belowStimulus",
          "answerOptions": ["Poor", "Fair", "Good", "Excellent"],
          "questionOptions": ["Design", "Usability", "Performance"],
          "required": true
        },
        {
          "id": "dropdown-response",
          "prompt": "Select country (Dropdown Response):",
          "type": "dropdown",
          "location": "belowStimulus",
          "placeholder": "Choose country",
          "options": ["USA", "Canada", "UK", "Germany", "Other"],
          "required": true
        },
        {
          "id": "slider-response",
          "prompt": "Experience level (Slider Response):",
          "type": "slider",
          "location": "belowStimulus",
          "options": [
            {"label": "Beginner", "value": 1},
            {"label": "Expert", "value": 10}
          ],
          "required": true
        },
        {
          "id": "radio-response",
          "prompt": "Preferred option (Radio Response):",
          "type": "radio",
          "location": "belowStimulus",
          "options": ["Option A", "Option B", "Option C"],
          "required": true
          
        },
        {
          "id": "checkbox-response",
          "prompt": "Select all that apply (Checkbox Response):",
          "type": "checkbox",
          "location": "belowStimulus",
          "options": ["Feature 1", "Feature 2", "Feature 3", "Feature 4"],
          "required": true
        },
        {
          "id": "reactive-response",
          "prompt": "Interactive response (Reactive Response):",
          "type": "reactive",
          "location": "belowStimulus"
        },
        {
          "id": "buttons-response",
          "prompt": "Quick selection (Buttons Response):",
          "type": "buttons",
          "location": "belowStimulus",
          "options": ["Yes", "No", "Maybe"],
          "required": true
        },
        {
          "id": "text-only-response",
          "prompt": "**This is a Text-Only Response** - no input required, just styled information display.",
          "type": "textOnly",
          "location": "belowStimulus"
        }
      ]
    },
    "markdown": {
      "type": "markdown",
      "path": "demo-style/assets/componentStylesheet.md",
      "stylesheetPath": "demo-style/assets/componentStylesheet.css",
      "response": [
        {
          "id": "stylesheet-demo",
          "prompt": "This component uses external CSS (stylesheetPath). How does it look?",
          "type": "radio",
          "location": "belowStimulus",
          "options": ["Great styling", "Good styling", "Needs work"],
          "required": true
        }
      ]
    },
    
    "response": {
      "type": "questionnaire",
      "response": [
        {
          "id": "rate-styling",
          "prompt": "This questionnaire also uses external CSS. Rate the styling:",
          "type": "likert",
          "location": "belowStimulus",
          "numItems": 5,
          "leftLabel": "Poor",
          "rightLabel": "Excellent",
          "required": true,
          "stylesheetPath": "demo-style/assets/responseStylesheet.css"
        },
        {
          "id": "final-feedback",
          "prompt": "Any final thoughts on the styling demonstration?",
          "type": "longText",
          "location": "belowStimulus",
          "placeholder": "Share your thoughts...",
          "required": false,
          "stylesheetPath": "demo-style/assets/responseStylesheet.css"
        }
      ]
    }
  },
  "sequence": {
    "order": "fixed",
    "components": [
      "introduction",
      {
        "id": "componentStyle",
        "order": "fixed",
        "components": [
          "markdown-component",
          "react-component",
          "image-component",
          "website-component",
          "questionnaire-component",
          "vega-path-component",
          "vega-config-component",
          "video-component"
        ]
      },
      {
        "id": "responseStyle",
        "order": "fixed",
        "components": [
          "responses"
        ]
      },
      {
        "id": "componentStylesheet",
        "order": "fixed",
        "components": [
          "markdown"
        ]
      },
      {
        "id": "responseStylesheet",
        "order": "fixed",
        "components": [
          "response"
        ]
      }
    ]
  }
}