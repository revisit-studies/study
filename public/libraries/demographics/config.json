{
  "$schema": "https://raw.githubusercontent.com/revisit-studies/study/v2.3.1/src/parser/LibraryConfigSchema.json",
  "description": "This is a library for demographic questions. It contains one component, demographics, with three questions: gender, age, and education.",
  "components": {
    "demographics": {
      "type": "questionnaire",
      "description": "Basic demographic questions including gender, age, and education",
      "response": [
        {
          "id": "gender",
          "prompt": "What is your **gender**?",
          "required": true,
          "location": "aboveStimulus",
          "type": "radio",
          "withOther": true,
          "options": [
            "Woman",
            "Man",
            "Non-binary / Genderqueer / Third gender",
            "Genderfluid / Gender non-conforming",
            "Questioning",
            "Prefer not to say"
          ]
        },
        {
          "id": "age",
          "prompt": "What is your **age**?",
          "required": true,
          "location": "aboveStimulus",
          "type": "radio",
          "options": [
            "Under 18 years",
            "18-24 years",
            "25-34 years",
            "35-44 years",
            "45-54 years",
            "55-64 years",
            "65 years or older",
            "Prefer not to say"
          ]
        },
        {
          "id": "education",
          "prompt": "What is the **highest degree or level of education** you have completed?",
          "required": true,
          "location": "aboveStimulus",
          "type": "radio",
          "withOther": true,
          "options": [
            "Less than high school",
            "High school diploma or equivalent",
            "Bachelor's degree or equivalent",
            "Master's degree or equivalent",
            "Doctoral degree or equivalent"
          ]
        }
      ]
    }
  },
  "sequences": {}
}